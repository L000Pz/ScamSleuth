{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "IAM-Route": {
        "ClusterId": "IAM-Cluster",
        "Match": {
          "Path": "IAM/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "Media-Route": {
        "ClusterId": "Media-Cluster",
        "Match": {
          "Path": "Media/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "User-Route": {
        "ClusterId": "User-Cluster",
        "Match": {
          "Path": "User/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "Public-Route": {
        "ClusterId": "Public-Cluster",
        "Match": {
          "Path": "Public/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "Admin-Route": {
        "ClusterId": "Admin-Cluster",
        "Match": {
          "Path": "Admin/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "IAM-Cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5000"
          }
        }
      },
      "Media-Cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "User-Cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5276"
          }
        }
      },
      "Public-Cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5218"
          }
        }
      },
      "Admin-Cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5157"
          }
        }
      }
    }
  }
}